rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false; // Users should not be able to list all other users.

      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
    
    match /posts/{postId} {
        allow list, get: if isSignedIn();
        allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    match /soil_reports {
      // Allow users to list their own reports via a query like where('userId', '==', request.auth.uid)
      allow list: if isSignedIn();
      
      match /{reportId} {
        allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /scans {
      // Allow users to list their own scans via a query like where('userId', '==', request.auth.uid)
      allow list: if isSignedIn();

      match /{scanId} {
        allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /yield_reports {
      // Allow users to list their own reports via a query like where('userId', '==', request.auth.uid)
      allow list: if isSignedIn();

      match /{reportId} {
        allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /profit_reports {
      // Allow users to list their own reports via a query like where('userId', '==', request.auth.uid)
      allow list: if isSignedIn();

       match /{reportId} {
        allow get: if isSignedIn() && resource.data.userId == request.auth.uid;
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /roles_admin/{userId} {
        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

        allow get: if true;
        allow list: if false;

        allow create: if false;
        allow update: if false;
        allow delete: if request.auth != null && isAdmin();
    }
  }
}
