rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can read their own profile, admins can read any.
    match /users/{userId} {
      allow read: if isOwner(userId) || get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'Admin';
      allow write: if isOwner(userId);
    }
    
    // Admins can read/write the roles collection
    match /roles_admin/{userId} {
      allow read, write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.role == 'Admin';
    }

    // Community posts are public to read for any signed-in user.
    // Users can only create posts. They can only update/delete their own posts.
    match /posts/{postId} {
      allow read, create: if request.auth != null;
      allow update, delete: if resource.data.authorId == request.auth.uid;
    }
    
    // Users can only manage their own reports and scans.
    match /soil_reports/{reportId} {
      allow read, list, create, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid) && request.resource.data.userId == request.auth.uid;
    }

    match /scans/{scanId} {
      allow read, list, create, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid) && request.resource.data.userId == request.auth.uid;
    }

    match /yield_reports/{reportId} {
      allow read, list, create, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid) && request.resource.data.userId == request.auth.uid;
    }

    match /profit_reports/{reportId} {
      allow read, list, create, write: if request.auth != null && (resource == null || resource.data.userId == request.auth.uid) && request.resource.data.userId == request.auth.uid;
    }
  }
}
