rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    match /posts/{postId} {
      allow list, get: if isSignedIn();
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        // The author can edit their own post
        resource.data.authorId == request.auth.uid ||
        
        // Anyone can like or comment, but cannot change anything else
        (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['upvotes', 'comments'])
        )
      );
      
      allow delete: if isSignedIn() && resource.data.authorId == request.auth.uid;
    }

    match /scans/{scanId} {
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }

    match /soil_reports/{reportId} {
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }

    match /yield_reports/{reportId} {
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }
    
    match /profit_reports/{reportId} {
      allow get, update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow list: if isSignedIn();
    }

    match /roles_admin/{userId} {
        function isAdmin() {
            return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
        }

        allow get: if true;
        allow list: if false;
        allow create: if false;
        allow update: if false;
        allow delete: if request.auth != null && isAdmin();
    }
  }
}
